<% if @project.tasks.length %>
  <p class="text-muted" id="tasks"> Tasks:</p>
  <ul class="list-group list-group-flush mb-3">
    <% @project.tasks.each do |task| %>
      <% if task.id != nil %>
        <% subtasks = Task.where(parent_id: task[:id]) %>
        <% if task.is_parent == false && task.is_subtask == false %>
          <% # render "tasks/task_list_item", task: task %>
          <li class="list-group-item <%= 'text-muted' if task.completed %>">
            <div class="row">
              <div class="col-1"><%= link_to [@project, task, :completed => true], method: :put do %>
                <% if task.completed %>
                  <%= svg 'checked' %>
                <% else %>
                  <%= svg 'unchecked'%>
                <% end %>
                <div class="col-auto">
                  <span class="badge badge-secondary"><%= task.subtasks.length %></span><%= link_to "", class: "content-toggle-btn" do %>
                    <%= svg 'list_tasks' %>
                  <% end %>
                  <%= link_to edit_project_task_path(@project, task) do %>
                    <%= svg 'edit' %>
                  <% end %>
                  <%= link_to project_task_path(@project, task), method: :delete, data: { confirm: 'Do you really want to delete this task?' }  do %>
                    <%= svg 'delete' %>
                  <% end %>
                </div>
              <% end %>
            </div>
              <div class="col">
                <%= link_to [@project, @task, :completed => true], method: :put do %>
                  <% if task.completed %><del><% end %>
                    <%= task.title %>
                  <% if task.completed %></del> <% end %>
                <% end %>
              </div>
              <div class="col-3"></div>
            </div>
          </li>
        <% elsif task.is_parent %>
          <% # render "tasks/task_list_item", task: task %>
          <li class="list-group-item <%= 'text-muted' if task.completed %>">
            <div class="row">
              <div class="col-1">
                <%= link_to [@project, task, :completed => true], method: :put do %>
                  <% if task.completed %>
                    <%= svg 'checked' %>
                  <% else %>
                    <%= svg 'unchecked'%>
                  <% end %>
                </div>
              </div>
              <div class="col">
                <%= link_to [@project, @task, :completed => true], method: :put do %>
                  <% if task.completed %><del><% end %>
                    <%= task.title %>
                  <% if task.completed %></del> <% end %>
                <% end %>
              </div>
              <div class="col-3"></div>
              <div class="col-auto">
                <span class="badge badge-secondary">
                  <%= task.subtasks.length %>
                </span>
                <%= link_to "", class: "content-toggle-btn" do %>
                  <%= svg 'list_tasks' %>
                <% end %>
                <%= link_to edit_project_task_path(@project, task) do %>
                  <%= svg 'edit' %>
                <% end %>
                <%= link_to project_task_path(@project, task), method: :delete, data: { confirm: 'Do you really want to delete this task?' }  do %>
                  <%= svg 'delete' %>
                <% end %>
              </div>
              <% subtasks.each do |subtask| %>
                <li class="<%= 'text-muted' if subtask.completed %>">
                  <div class="list-group-item">
                    <% # render "tasks/subtasks", task: task %>
                    <div class="row">
                      <div class="col-2">
                        <% # render "tasks/task_list_item", task: subtask %>
                        <%= link_to [@project, subtask, :completed => true], method: :put do %>
                          <% if subtask.completed %>
                            <%= svg 'checked' %>
                          <% else %>
                            <%= svg 'unchecked'%>
                          <% end %>
                        <% end %>
                        <%= link_to [@project, subtask], method: :put do %>
                          <% if subtask.completed %><del><% end %>
                            <%= subtask.title %>
                          <% if subtask.completed %></del><% end %>
                        <% end %>
                        <%= link_to project_task_path(@project, subtask), method: :delete, data: { confirm: 'Do you really want to delete this task?' }  do %>
                          <%= svg 'delete' %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </li>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
<% end %>
