<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="projects-index">
        <h2>Projects</h2>

        <table class="projects-table">
          <thead>
            <tr class="projects-table-row">
              <th>Name</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <% if @activeMember && @activeMember.is_admin ||
                  current_user.id == project.user.id %>
                <tr class="projects-table-row">
                  <td><%= project.name %></td>
                  <td><%= project.description %></td>
                  <td>
                    <%= link_to 'Show', project, class:"btn btn-primary" %>
                    <%= link_to 'Edit', edit_project_path(project), class:"btn btn-primary" %>
                    <%= link_to 'Destroy', project, class:"btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>

                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Project', new_project_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
