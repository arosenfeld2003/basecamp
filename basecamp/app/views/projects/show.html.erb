<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="project-show">

        <h2 class="project-show-name"><%= @project.name %></h2>

        <div class="project-creator">
          Created by: <%= @project.user.name %>
        </div>

        <div class="project-members">

          <div class="project-members-list">
            <div class="project-members-title">
              Members:
            </div>
            <div class="project-members-list-wrap">
              <% @members.each do |member| %>
                <p><%= link_to member.name, edit_project_member_path(@project, member) %></p>
              <% end %>
            </div>
          </div>

          <%= link_to new_project_member_path(@project), class: 'btn' do %>
            <button type="button" class="btn btn-primary" aria-label="Center Align">
              Add new member
            </button>
          <% end %>
        </div>
        <div class="project-btn-wrap">
          <%= link_to 'Edit Project', edit_project_path(@project), class:"btn btn-primary" %>
          <%= link_to 'Back', projects_path, class:"btn btn-primary" %>
          <%= link_to 'Destroy Project', @project, method: :delete, class:"btn btn-primary", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
</div>
