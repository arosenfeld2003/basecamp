<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="table">
        <div class="table-row header">
          <div class="table-header">
            <h2>Projects</h2>
          </div>
          <div class="project-new">
            <%= link_to new_project_path, class: 'btn' do %>
            <button type="button" class="btn btn-primary" aria-label="Center Align">
              Add new project
            </button>
            <% end %>
          </div>
        </div>
        <div class="table-wrap">
          <% @projects.each do |project| %>
            <div class="table-row">
              <div class="project">
                <p class="title is-4">
                  <%= link_to project.name, project, class: 'project-name' %>
                </p>
                <p class="project_creator">
                  Created by: <%= project.user.name %>
                </p>
                <div class="members">
                  <div class="members-list">
                    <%# @users.each do |member| %>
                      <p class="member-name">
                        <%#= link_to member.name, member %>
                      </p>
                    <%# end %>
                  </div>
                  <%= link_to new_member_path, class: 'btn' do %>
                    <button type="button" class="btn btn-primary" aria-label="Center Align">
                      Add new member
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
