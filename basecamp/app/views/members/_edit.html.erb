<% if project.members.length > 0 %>
  <p class="my-0 text-muted">Members:</p>
  <% project.members.each do |member| %>
    <div class="row">
      <div class="col-1 p-0  text-right">
        <% if member.is_admin == true %>
          <%= svg 'admin' %>
        <% else %>
          <%= svg 'person' %>
        <% end %>
      </div>
      <div class="col-3 text-truncate"><small><%= member.email %></small></div>
      <div class="col-6 text-right">
        <% if member.is_admin == true %>
          <%= link_to 'Remove Admin Role', [member.project, member], :class => 'btn btn-outline-dark  btn-sm',
                method: :put
          %>
        <% else %>
          <%= link_to 'Add Admin Role', [member.project, member], :class => 'btn btn-outline-dark  btn-sm',
                method: :put
          %>
        <% end %>
        <div class="permission-form">
          <div class="dropdown update_btn">
            <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Change permission
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= bootstrap_form_for(member, url: project_member_path(project)) do |f| %>
                <% if member.can_read == true %>
                  <%= f.check_box :can_read, label: "Can read tasks" %>
                <% else %>
                  <%= f.check_box :can_read, label: "Can read tasks" %>
                <% end %>
                <% if member.can_write == true %>
                  <%= f.check_box :can_write, label: "Can write tasks", checked: true %>
                <% else %>
                  <%= f.check_box :can_write, label: "Can write tasks" %>
                <% end %>
                <% if member.can_update == true %>
                  <%= f.check_box :can_update, label: "Can update tasks", checked: true %>
                <% else %>
                  <%= f.check_box :can_update, label: "Can update tasks" %>
                <% end %>
                <% if member.can_update == true %>
                  <%= f.check_box :can_delete, label: "Can delete tasks", checked: true %>
                <% else %>
                  <%= f.check_box :can_delete, label: "Can delete tasks" %>
                <% end %>

                <div class="update_btn"><%= f.primary "Update permission", render_as_button: true, class: 'btn btn-warning'%></div>
              <% end %>
            </div>
          </div>
        </div>
      <%= link_to [member.project, member], :class => 'btn btn-danger  btn-sm',
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this member?' } do %>
            <%= svg 'delete' %>
      <% end %>
      </div>
    </div>
  <% end %>
<% end %>
