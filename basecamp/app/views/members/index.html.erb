<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="members-container">

        <h2>Members</h2>
        <%= link_to 'Show Project', [@project], class:"btn btn-primary" %>

        <table class="members-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Admin</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @members.each do |member| %>
              <tr>
                <td><%= member.name %></td>
                <td><%= member.email %></td>
                <td><%= member.is_admin %></td>
                <td>
                  <%= link_to 'Edit Member', edit_project_member_path(@project, member), class:"btn btn-primary" %>
                  <%= link_to 'Destroy Member', [@project, member], class:"btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Member', new_project_member_path(@project), class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
