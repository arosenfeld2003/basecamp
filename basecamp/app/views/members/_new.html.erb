<%= bootstrap_form_for(member, url: project_members_path(@project)) do |f| %>
  <div class="row mt-4">
    <div class="col-4"><%= f.email_field :email, require: true, label: "Add new member", label_class: "text-muted" %></div>
    <div class="col-2 align-self-end update_btn"><%= f.check_box :is_admin, custom: :switch, label: "Admin" %></div>
    <div class="col-3 align-self-end">
      <div class="dropdown update_btn">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Role permission
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= f.check_box :can_read, label: "Can read tasks" %>
          <%= f.check_box :can_write, label: "Can write tasks" %>
          <%= f.check_box :can_update, label: "Can update tasks" %>
          <%= f.check_box :can_delete, label: "Can delete tasks" %>
        </div>
      </div>
    </div>

    <div class="col-2 align-self-end update_btn"><%= f.primary "#{svg 'new_member'}".html_safe, render_as_button: true, class:  'btn btn-warning'%></div>
  </div>
  <% flash.each do |type, msg| %>
    <% if type == 'alert' %>
      <span class="small text-danger"><%= msg %></span>
    <% end %>
  <% end %>
<% end %>
